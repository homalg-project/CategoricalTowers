    end );
    
    ##
    AddAssociatorLeftToRightWithGivenTensorProducts( FpAlg_k,
      function( FpAlg_k, source, algebra1, algebra2, algebra3, target )
        
        return MorphismConstructor( FpAlg_k,
                       source,
