        quiver := FinQuiver(
                          Triple( "q",
                                  Pair( 1, [ "o" ] ),
                                  NTuple( 4,
                                          nrgens,
                                          ListWithIdenticalEntries( nrgens, 1 ),
                                          ListWithIdenticalEntries( nrgens, 1 ),
                                          nmgens ) ) );
        
        F := PathCategory( quiver );
        
        k := CoefficientsRing( FpAlg_k );
        
        L := LinearClosure( k, F );
        
        o := SetOfObjects( L )[1];
        
